<html>
    <head>
        <title> <%=title %> </title>
    </head>

    <body>
        <center>

        <form class="form" action="/user/updateuser" method="post">
            <div class="mb-3">
                <label>User ID</label>
                <input type="text" class="form-control" id="id" name="id" value="<%=userdata._id %>" readonly required>
              </div>
            <div>
                <label> First Name </label>
                <input type="name" name="fname" value="<%=userdata.fname %>" required />
            </div>
            <div>
                <label> Last Name </label>
                <input type="name" name="lname" value="<%=userdata.lname %>" required />
            </div>
            <div>
                <label>mobile number </label>
                <input type="nickname" name="mobile" value="<%=userdata.mobile %>"  required />
            </div>
            <div>
                <label> Email Address </label>
                <input type="email" name="email"value="<%=userdata.email %>" required />
            </div>
            <div class="input_field select_option">
                <div class="input_field"> <span><i aria-hidden="true" class="fa fa-user"></i></span>
                  <label> Address</label>
                  <input type="address" name="address" placeholder="address"  value="<%=userdata.address %>"  required />
                </div>
                <div class="select_arrow"></div>
              </div>

              <div class="input_field select_option">
                <select  name="option" id="option">
                  <option>Select Gender </option>
                  <option value="male">Male</option>
                  <option value="female">Female</option>
                  <option value="other">Other</option>
                </select>
                <div class="select_arrow"></div>
              </div>
              <div>
                <label> Password </label>
                <input type="password" name="password"value="<%=userdata.password %>" required />
            </div>
       
            <div>
                <button type="submit"> Update </button>
            </div>
            <div>
                <a href="/user/"> Already a Registed User </a>
          
                <a href="/user/forgot" class="">forgot Password</a>
            </div>
        </form>
    </center>
    </body>

